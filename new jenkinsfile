pipeline {
    agent { label "Jenkins-Agent" }

    parameters {
        string(name: 'IMAGE_TAG', defaultValue: '', description: 'Tag of the new Docker image')
    }

    environment {
        ECR_IMAGE = "583169991743.dkr.ecr.us-east-1.amazonaws.com/ci-cd/java_image"
    }

    stages {

        stage("Cleanup Workspace") {
            steps {
                cleanWs()
            }
        }

        stage("Checkout from SCM") {
            steps { 
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/Nilesh151299/gitops-register-app.git'
            }
        }

        stage("Update Deployment Image Tag") {
            steps {
                sh """
                    echo "Before update:"
                    cat deployment.yaml

                    sed -i "s|image: .*|image: ${ECR_IMAGE}:${IMAGE_TAG}|g" deployment.yaml

                    echo "After update:"
                    cat deployment.yaml
                """
            }
        }

        stage("Push Updated Manifest") {
            steps {
                sh """
                    git config --global user.name "Nilesh151299"
                    git config --global user.email "sonawanenilesh151299@gmail.com"
                """

                withCredentials([usernamePassword(credentialsId: 'github', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                    sh """
                        git add deployment.yaml || true
                        git commit -m "Updated Deployment Manifest with tag ${IMAGE_TAG}" || true

                        git remote set-url origin https://${GIT_USER}:${GIT_PASS}@github.com/Nilesh151299/gitops-register-app.git
                        git push origin main
                    """
                }
            }
        }
    }
}
